# React Application Environment Variables Example
# Copy this file to .env and replace values as needed

# API Gateway endpoint for backend service
REACT_APP_API_URL=http://localhost:3001  # local default (SAM local)

# Image Processor service endpoint
REACT_APP_IMAGE_PROCESSOR_URL=http://localhost:3002  # local default (Docker)

# Source map generation for debugging
GENERATE_SOURCEMAP=true  # set to false to disable source maps

# Application environment
REACT_APP_ENV=development  # change to 'production' when deploying

# --- Production Examples ---
